<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sonicbg"
    tools:context=".Movie">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="518dp"
        android:layout_marginTop="250dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/poppinsemibold"
            android:text="SONIC THE HEDGEHOG"
            android:textColor="@color/navy"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_round_star_24" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_round_star_24" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_round_star_24" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_round_star_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsemibold"
                android:text="Action/Movie/Comedy"
                android:textColor="@color/navy"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pricetiket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppinsemibold"
                android:text="Rp75000"
                android:textColor="@color/navy"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppinsregular"
            android:text="Sonic, seekor landak biru ekstraterestrial yang dapat berlari dengan kecepatan supersonik, mendapati dirinya dicari oleh suku echidnas untuk kekuasaannya. Pengawalnya, Longclaw the Owl, memberinya sekantong cincin yang dapat membuat portal ke planet lain, menggunakan satu untuk mengirimnya ke Bumi sementara dia melindunginya dari echidnas"
            android:textColor="@color/navy"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape"
            android:backgroundTint="@color/navy"
            android:text="Get Ticket"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>
    </FrameLayout>

