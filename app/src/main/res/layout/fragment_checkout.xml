<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/getticket"
    tools:context=".checkout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SONIC THE HEDGEHOG"
            android:textColor="@color/navy"
            android:layout_marginTop="385dp"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/poppinsemibold"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Number"
            android:textColor="@color/emas"
            android:layout_marginTop="440dp"
            android:layout_marginStart="45dp"
            android:fontFamily="@font/poppinsemibold"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/orderNumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1198804794001625088"
            android:textColor="@color/navy"
            android:layout_marginTop="460dp"
            android:layout_marginStart="45dp"
            android:fontFamily="@font/poppinsregular"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/JenisSeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regular Seat"
            android:textColor="@color/emas"
            android:layout_marginTop="500dp"
            android:layout_marginStart="45dp"
            android:fontFamily="@font/poppinsemibold"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/seatPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="520dp"
            android:fontFamily="@font/poppinslight"
            android:text="Rp75000"
            android:textColor="@color/navy"
            android:textSize="15sp" />

    </RelativeLayout>
    </FrameLayout>
</ScrollView>
